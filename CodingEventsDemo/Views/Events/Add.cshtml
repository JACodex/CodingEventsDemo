@using CodingEventsDemo.ViewModels;
@model AddEventViewModel;
<h1>Add Event</h1>

<form method="post">
    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name" style="color: black; background-color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" style="color: black; background-color: red;"></span>

    </div>
    <input type="submit" value="Add Event" />
</form>
